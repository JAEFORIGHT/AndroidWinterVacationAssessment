<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_discuss_and_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_discuss_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_discuss_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="用户名为空"
                android:textSize="25sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_discuss_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_discuss_and_name"
            android:layout_marginLeft="20dp"
            android:text="评论内容"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_discuss_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_discuss_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="时间"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_discuss_time"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_discuss_exciting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:src="@mipmap/ic_like" />

            <ImageView
                android:id="@+id/iv_discuss_naive"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:src="@mipmap/ic_unlike" />

        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>