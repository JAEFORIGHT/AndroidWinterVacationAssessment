<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_collection_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="标题为空"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/ll_collection_avatar_and_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tv_collection_title"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_collection_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_collection_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="用户名"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_collection_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_collection_avatar_and_name"
                android:layout_marginLeft="20dp"
                android:text="内容为空"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/iv_collection_image"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_below="@id/tv_collection_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:scaleType="center" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>